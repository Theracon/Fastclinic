<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid">
    <header class="bg-light p-5 rounded-lg m-3 text-center" id="header">
        <div style="display: flex; align-items: center; justify-content: space-between;">
            <!--CLOCK-->
            <div class="analog">
                <div class="hand hour"></div>
                <div class="hand minute"></div> 
                <div class="hand second"></div>
            </div>
            <div style="display: flex; align-items: flex-start; width: 10%;">  
                <% if(currentUser.hospitalDetails.unread_notifications_count > 0) { %> 
                    <p><a href="/hospitals/<%=currentUser.username%>/notifications"><i class="fas fa-bell" style="font-size: 2rem; color: #0275D8;"></i></a></p>
                    <span><%= currentUser.hospitalDetails.unread_notifications_count %> </span>
                    <% } else { %>
                        <p><a href="/hospitals/<%=currentUser.username%>/notifications"><i class="fas fa-bell" style="font-size: 2rem; color: white;"></i></a></p>
                        <% } %> 
                    </div>
                </div>
        <h1 class="header-h1-text">Patient Details</h1>
        <p style="cursor: pointer;"><i class="fas fa-chevron-down" id="show_links"></i></p>
        <%- include("../partials/navbar_hospital.ejs") %>
    </header>

        <%- include("../partials/alert.ejs") %> 
        <br>

        <div class="row g-3 align-items-center justify-content-center holder_div" style="width: 80%; margin: 0 auto;">
            <% function formatNumber(num) { %>
                <% var numSplit, int, dec; %>
                <% num = parseFloat(num, 10); %>
                <% num = num.toFixed(2); %>
                <% numSplit = num.split("."); %>
                <% int = numSplit[0]; %>
                <% if(int.length > 3) { %>
                    <% int = int.substr(0, int.length - 3) + "," + int.substr(int.length - 3, 3); %>
                <% } %>
                <% dec = numSplit[1]; %>
                <% return int + "." + dec; %>
            <% } %>

            <div class="container holder_div">
                <br>
                <div style="width: 100%; margin: 0 auto;">
                    <p class="text-center"><span class="patient-info lead">ACCESSION NUMBER </span><br><span><%=patient.accession_number%></span></p>
                    <hr>
                    <p class="text-center"><span class="patient-info lead">NAME </span><br><span><%=patient.name%></span></p>
                    <hr>
                    <p class="text-center"><span class="patient-info lead overflow-auto">INVESTIGATIONS </span><br> <span><%=patient.investigation%> </span></p>
                    <hr>
                    <p class="text-center"><span class="patient-info lead">AMOUNT PAID </span><br> <span><strike>N</strike><%=formatNumber(patient.amount_paid)%> </span></p>
                    <br><br>
                    <% if(patient.status == "unauthenticated") { %>
                        <div class="button-group" id="button-group">
                            <button type="button" class="button btn btn-primary" style="display: block; margin: auto;" onclick="window.location.href='/hospitals/<%=currentUser.username%>/authenticate/<%=patient.accession_number%>';">Authenticate</button>
                        </div> 
                    <% } %> 
                </div>
            </div>
        </div>
    </div>
    <div class="space"></div>
</div>

<%- include("../partials/footer.ejs") %>