<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid">
    <div class="container">
        <header class="bg-light p-5 rounded-lg m-3 text-center" id="header">
            <div style="display: flex; align-items: center; position: relative;">
                <h1 class="header-h1-text" style="position: absolute; z-index: -1;"><%=currentUser.hospitalDetails.name.toUpperCase()%></h1>
                <p style="cursor: pointer;"><i class="fas fa-chevron-down" id="show_links"></i></p>
                <div style="display: flex; align-items: flex-start; width: 10%;">  
                    <% if(currentUser.hospitalDetails.unread_notifications_count > 0) { %> 
                        <p><a href="/hospitals/<%=currentUser.username%>/notifications"><i class="fas fa-bell" style="font-size: 2rem; color: #0275D8;"></i></a></p>
                        <span><%= currentUser.hospitalDetails.unread_notifications_count %> </span>
                    <% } else { %>
                        <p><a href="/hospitals/<%=currentUser.username%>/notifications"><i class="fas fa-bell" style="font-size: 2rem; color: white;"></i></a></p>
                    <% } %> 
                </div>
            </div>
            <%- include("../partials/navbar_hospital.ejs") %>
        </header>
        
        <%- include("../partials/alert.ejs") %>
        <br>

        <div class="container">
            <div class="dashboard-buttons-div">
                <!--AUTHENTICATE A PATIENT-->
                <button class="dashboard-button-normal" onclick="window.location.href='/hospitals/<%=currentUser.username%>/authenticate';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-hospital-user extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">Authenticate a Patient</span>
                </button>
                <!--PATIENTS-->
                <button class="dashboard-button-normal" onclick="window.location.href='/hospitals/<%=currentUser.username%>/patients';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-procedures extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">Patients</span>
                </button>
                <!--PROFILE-->
                <button class="dashboard-button-normal" onclick="window.location.href='/hospitals/<%=currentUser.username%>/profile';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-user-md extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">Profile</span>
                </button>
                <!--FAQs-->
                <button class="dashboard-button-normal" onclick="window.location.href='/faq';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-question extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">FAQs</span>
                </button>
                <!--CONTACT US-->
                <button class="dashboard-button-normal" onclick="window.location.href='/contact';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-phone-alt extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">Contact</span>
                </button>
                <!--LOGOUT-->
                <button class="dashboard-button-grey" onclick="window.location.href='/Logout';">
                    <span class="lh-1" style="padding-top: 0.5rem;"><i class="fas fa-power-off extra-big-icon"></i></span> 
                    <span class="lh-1" style="font-weight: 500;">Logout</span>
                </button>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>