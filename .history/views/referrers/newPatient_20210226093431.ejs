<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid"> 
    <div class="container">
        <header class="bg-light p-5 rounded-lg m-3 text-center" id="header">
            <div style="display: flex; align-items: center;">
                <h1 class="header-h1-text">Refer a Patient</h1>
                <div style="display: flex; align-items: flex-start; width: 10%;">  
                    <% if(currentUser.referrerDetails.unread_notifications_count > 0) { %> 
                        <p><a href="/referrers/<%=currentUser.username%>/notifications"><i class="fas fa-bell" style="font-size: 2rem; color: #0275D8;"></i></a></p>
                        <span><%= currentUser.referrerDetails.unread_notifications_count %> </span>
                    <% } else { %>
                        <p><a href="/referrers/<%=currentUser.username%>/notifications"><i class="fas fa-bell" style="font-size: 2rem; color: white;"></i></a></p>
                    <% } %> 
                </div>
            </div>
            <%- include("../partials/navbar_referrer.ejs") %>
            <span style="cursor: pointer;"><i class="fas fa-chevron-down" id="show_links"></i></span>
        </header>
        
        <%- include("../partials/alert.ejs") %> 
        <br>
        
        <form action="/referrers/<%=currentUser.username%>/patients" method="POST">
            <div class="new_patient_form_div">
                <div class="form-floating mb-3">
                    <select class="form-select" id="floatingSelect" name="hospital" required>
                        <option value="-1" selected disabled>--- Select one ---</option>

                        <% hospitals.forEach(function(hospital, index) { %>
                            <% if(hospital.role == 1) { %>

                                <option value="<%=index%>"> <%=hospital.hospitalDetails.name%> </option>
                                
                            <% } %> 
                        <% }); %>

                    </select>
                    <label for="floatingSelect">Hospital you want to refer patient to</label>
                </div>

                <div class="patient-form">
                    <div class="mb-3">
                        <label for="name" class="form-label">Patient's name</label>
                        <input type="text" class="form-control" id="name" name="name" required>
                    </div>
                    <div class="mb-3">
                        <label for="investigation" class="form-label">Investigations (e.g. chest x-ray)</label>
                        <textarea class="form-control" name="investigation" id="investigation" style="height: 10rem;" required></textarea>
                        <p style="font-size: 0.8rem;"><i class="fas fa-exclamation-circle"></i> <span>Check our <a href="/hospitals" target="_blank">hospital index page</a> to see the investigations available in each hospital.</span></p>
                    </div>
                    <div class="mb-3">
                        <label for="phone" class="form-label">Patient's phone number:</label>
                        <input type="text" class="form-control" id="phone" name="phone">
                    </div>
                    <br><br>
                    <div class="button-group">
                        <input type="submit" class="text-wrap button btn btn-primary button-group-child" value="Confirm" style="width: 45%;">
                        <button class="text-wrap button btn btn-secondary button-group-child" onclick="window.location.href='/referrers/<%=currentUser.username%>/dashboard';" style="width: 45%;">Cancel</button>
                    </div>
                </div>
            </div>
        </form>
        <div class="space"></div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>