<%- include("../partials/header.ejs") %>
<%- include("../partials/navbar.ejs") %>

<div class="container-fluid" id="container-fluid">
    <div class="container">
        <header class="bg-light p-5 rounded-lg m-3 text-center sticky-sm-top" id="header">
            <h1 class="header-h1-text">Contact Us</h1>
        </header>
        <br>
        <!--Email-->
        <div id="email" style="height: auto; border: 1px solid lightgrey; background-color: white; padding: 1rem; width: 50%; margin: 0 auto 2rem auto;">
            <h1 class="header-h1-text text-center">Email</h1>
            <hr>
            <p class="text-center">We read all emails and respond quickly.</p>
            <br><br>
            <p class="text-center"><i style="margin-right: 1rem; font-size: 1.5rem;" class="fas fa-envelope align-middle"></i> <a class="lead" href="#">hello@patientrefplatform.com</a></p>
        </div><br>
        <!--Phone-->
        <div id="phone" style="height: auto; border: 1px solid lightgrey; background-color: white; padding: 1rem; width: 50%; margin: 0 auto 2rem auto;">
            <h1 class="header-h1-text text-center">Phone</h1>
            <hr>
            <p class="text-center" style="margin: 0;">Our lines are available 24/7!</p>
            <p class="text-center text-muted" style="margin: 0;">If busy, try again in a few minutes.</p>
            <br><br>
            <p class="text-center lead"><i style="margin-right: 1rem; font-size: 1.5rem;" class="fas fa-phone-alt align-middle"></i> <a href="#">+234 (0) 806 019 4496</a> | <a href="#">+234 (0) 913 228 3783</a></p>
        </div>
        <!--Live chat: new message-->
        <div id="message">
            <form action="/livechat/<%=currentUser.typeOfUser%>">
                <div style="width: 50%; margin: 0 auto 2rem auto; background-color: white; padding: 2rem; border: 1px solid lightgrey;">
                    <h1 class="header-h1-text text-center">Live Chat</h1>
                    <hr>
                    <input type="text" name="typeOfUser" value="<%= currentUser.typeOfUser %>" style="display: none;">
                    
                    <br>
                    <p class="text-center" style="margin: 0;">Start a live chat and get your queries answered instantly.</p>
                    <p class="text-center text-muted" style="margin: 0;">We're working tirelessly to bring you this functionality.</p>
                    <br><br>
                    <button type="submit" class="button btn btn-secondary" disabled style="font-family: 'Poppins', sans-serif; width: 45%; margin: 0 auto; display: block;">
                        Coming Soon
                    </button>
                </div>
            </form>
        </div>
    </div>
    <div class="space"></div>
</div>

<%- include("../partials/footer.ejs") %>