<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid">
    <div class="container">
        <header class="bg-light p-5 rounded-lg m-3 text-center sticky-sm-top" id="header">
            <h1 class="header-h1-text">Contact Us</h1>
        </header>
        <br>

        <!--New message-->
        <div id="">

        </div>
        <form action="/referrers/<%=currentUser._id%>/messages" method="POST">
            <div style="width: 50%; margin: 0px auto; background-color: white; padding: 2rem;">
                <!--Name-->
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="name" name="name" value="<%=currentUser.referrerDetails.title + " " + currentUser.referrerDetails.name%>" readonly>
                    <label for="name">Name</label>
                </div>
                <!--Subject-->
                <div class="form-floating mb-3">
                    <input type="text" class="form-control" id="subject" name="subject" required>
                    <label for="subject">Subject</label>
                </div>
                <!--Content-->
                <div class="form-floating">
                    <textarea class="form-control" name="content" id="content" required style="height: 10rem;"></textarea>
                    <label for="content">Your message here...</label>
                </div>
                <br><br>
                <div class="button-group" style="width: 100%;">
                    <input type="submit" class="button btn btn-primary" value="Send Message" style="font-family: 'Poppins', sans-serif; width: 45%; margin: 0.25rem;">
                    <button class="button btn btn-secondary" onclick="window.location.href='/referrers/<%=currentUser._id%>/dashboard';" style="font-family: 'Poppins', sans-serif; width: 45%; margin: 0.25rem;">Cancel</button>
                </div>
            </div>
        </form>
    </div>
</div>


<%- include("../partials/footer.ejs") %>