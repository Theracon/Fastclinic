<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid">
    <div class="container">
        <header class="bg-light p-5 rounded-lg m-3 text-center sticky-sm-top" id="header">
            <h1 class="header-h1-text">Referrers</h1>
        </header>
        
        <%- include("../partials/alert.ejs") %><br>
        
        <div class="referrers">

            <% referrers.forEach(function(referrer) { %>
                <% if(referrer.role == 1) { %>

                    <button type="button" class="btn btn-outline-primary referrer_button" onclick="window.location.href='/admin/referrers/<%= referrer.username %>';">
                        <span style="height: 50%;"><%= referrer.referrerDetails.name %> </span>
                        <span class="overflow-auto" style="font-family: 'Open Sans', sans-serif!important; font-size: 0.8rem; height: 50%;"><%= referrer.referrerDetails.institution %></span>
                    </button>

                <% } else if(hospital.role < 1) { %>

                    <button type="button" class="btn btn-outline-secondary hospital_button" onclick="window.location.href='/admin/referrers/<%= referrer.username %>';">
                        <span style="height: 50%;"><%= referrer.referrerDetails.name %> </span>
                        <span class="overflow-auto" style="font-family: 'Open Sans', sans-serif!important; font-size: 0.8rem; height: 50%;"><%= referrer.referrerDetails.institution %></span>
                    </button>

                <% } %> 
            <% }); %>

        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>