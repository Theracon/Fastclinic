<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid">
    <div class="container">
        <header class="bg-light p-5 rounded-lg m-3 text-center" id="header">
            <h1 class="header-h1-text">Referrer Profile</h1>
        </header>

        <%- include("../partials/alert.ejs") %>

        <br>
        <div class="container" id="profile" style="font-family: 'Open Sans', sans-serif; border: 1px solid lightgrey;">
            <div class="profile-details">
                <p class="profile-details-paragraph"><span class="lead">Name</span><br><span class="">Doctor <%=referrer.referrerDetails.name%></span></p>
                <p class="profile-details-paragraph"><span class="lead">Institution of practice</span><br><span><%=referrer.referrerDetails.institution%></span></p>
                <p class="profile-details-paragraph"><span class="lead">Address of Institution</span><br><span class="text-wrap text-break lh-1 overflow-auto   " style="font-size: 0.8rem;"><%=referrer.referrerDetails.address%></span></p>
                <p class="profile-details-paragraph"><span class="lead">Phone number</span><br><span><%=referrer.referrerDetails.phone%></span></p>
                <p class="profile-details-paragraph"><span class="lead">Account number</span><br><span><%=currentUser.referrerDetails.ac_number%></span></p>
                <p class="profile-details-paragraph"><span class="lead">Account name</span><br><span><%=currentUser.referrerDetails.ac_name%></span></p>
                <p class="profile-details-paragraph"><span class="lead">Bank<br></span><span><%=currentUser.referrerDetails.bank%></span></p>
                <br><br>
                <button class="btn btn-outline-primary btn-lg" onclick="window.location.href='/referrers/<%=currentUser.username%>/profile/edit';" style="display: block; margin: 0 auto; padding: 1rem; width: 20%; font-family: 'Poppins', sans-serif;">Edit Profile</button>
            </div>
        </div>
        <br>
        <div class="deactivate-account">
            <br>
            <h3 class="text-center">Deactivate Account</h3>
            <hr>
            <p class="deactivate-account-text text-center">Can we resolve this?
                <br><br>
                <small><a href="/contact">Reach us via email</a> with your complaints and/or queries.</small><br>
                <small>Or call our 24/7 hotlines: <a href="#">+234 (0) 806 019-4496</a> | <a href="#">+234 (0) 913 228-3783</a></small>
            </p>
            <button class="btn btn-lg btn-danger" onclick="window.location.href='/referrers/<%=currentUser.username%>/deactivate';" style="font-family: 'Poppins', sans-serif; padding: 1rem; width: 20%; display: block; margin: 0 auto;">Deactivate</button><br>  
        </div>
    </div>
    <div class="space"></div>
</div>

<%- include("../partials/footer.ejs") %>