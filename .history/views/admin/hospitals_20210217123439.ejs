<%- include("../partials/header.ejs") %>

<div class="container-fluid" id="container-fluid">
    <div class="container">
        <header class="bg-light p-5 rounded-lg m-3 text-center sticky-sm-top" id="header">
            <h1 class="header-h1-text">Hospitals</h1>
        </header>
        
        <%- include("../partials/alert.ejs") %><br>
        
        <div class="hospitals">

            <% hospitals.forEach(function(hospital) { %>

                <button type="button" class="btn btn-primary hospital_button">
                    <span><%= hospital.hospitalDetails.name %> </span>
                    <span class=""></span>
                </button>
                
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title"><%= hospital.hospitalDetails.name %> </h5>
                        <p class="card-text overflow-auto"><%= hospital.hospitalDetails.address %> </p>
                    </div>
                </div>

            <% }); %>

        </div>
    </div>
</div>

<%- include("../partials/footer.ejs") %>